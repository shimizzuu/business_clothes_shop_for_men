<div class="col-md-3 col-sm-4 col-xs-12 sideBar">
  <div class="panel panel-default">
    <div class="panel-heading">商品カテゴリー</div>
    <div class="panel-body">
      <div class="collapse navbar-collapse navbar-ex1-collapse navbar-side-collapse">
        <ul class="nav navbar-nav side-nav">
          <% categories.each_with_index do |category, i| %>
            <li>
              <a href="javascript:;" data-toggle="collapse" data-target="#category-<%= i %>">
                <%= category.name %>
                <i class="fa fa-plus"></i>
              </a>
              <ul id="category-<%= i %>" class="collapse collapseItem">
                <% category.root.leaves.each do |leaf| %>
                  <li>
                    <%= link_to potepan_category_path(leaf.id) do %>
                      <i class="fa fa-caret-right" aria-hidden="true"></i>
                      <%= leaf.name %>
                      <span><%= "(#{leaf.all_products.count})" %></span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="panel panel-default filterNormal">
    <div class="panel-heading">色から探す</div>
    <div class="panel-body">
      <ul class="list-unstyled">
        <%= render partial: 'option', collection: colors, as: :option, locals: {taxon: taxon} %>
      </ul>
    </div>
  </div>
  <div class="panel panel-default filterNormal">
    <div class="panel-heading">サイズから探す</div>
    <div class="panel-body">
      <ul class="list-unstyled clearfix">
        <%= render partial: 'option', collection: sizes, as: :option, locals: {taxon: taxon} %>
      </ul>
    </div>
  </div>
</div>
